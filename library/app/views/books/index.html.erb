<h1>Books</h1>
<p>Available as of <%= formatted_time(@available_at) %></p>
<%= page_entries_info @books %>
<ol>
<% @books.each do |book| %>
	  <li>
	  <%= link_to(book.title, book) %>
	  by <%= book.author %><br/>
	  <%= format_show_reserved_on(book) %>
	  <% if book.reservations.any? %>
	    (out of <%= pluralize(book.reservations.size, 'reservation') %>)
	  <% end %>
	  </li>
<% end %>
</ol>
<%= paginate @books %>

