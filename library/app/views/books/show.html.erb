
<article class="book">
  <header>
    <h2><%= @book.title %></h2>
  </header>
  <p><label>Author:</label> <%= @book.author %></p>
  <p><label>Pages:</label> <%= number_with_delimiter(@book.pages) %></p>
  <p><label>Published On:</label> <%= @book.published_on %></p>
  <p><label>ISBN:</label> <%= @book.isbn %></p>
  <p><label>Genre:</label> <%= @book.genre %></p>
  <p><label>Available:</label> <%= @book.total_in_library %></p>
  <p><label>Abstract:</label> <%= @book.abstract %></p>
  <p><label>Cover Image:</label><%= @book.image_cover_url %> </p>

</article>

<%= link_to 'All Books', books_path %> | <%= link_to 'Edit', edit_book_path(@book) %>

<%= button_to 'Delete', @book,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
